@model IEnumerable<MarkFlixAWSApp.Models.Content>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h3>MarkFlix Assessment - A Team</h3>
</div>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard - Watch History</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
        </div>
        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="calendar"></span>
        This week
        </button>
    </div>
</div>

<canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>

<h2>Recently Added Items</h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th></th>  
            <th>Title</th> 
            <th>Season</th>
            <th>Episode</th>
            <th>Watch Date</th>  
            <th>Total Plays</th>  
        </tr>
        </thead>
        <tbody>
            @foreach (var d in Model)  
            {  
                <tr>  
                    <td>
                    @if (d.LibraryName == "Movies" || d.LibraryName == "Movies 4K")
                    {
                        <span data-feather="film"></span>
                    }
                    else if (d.LibraryName == "TV Shows") 
                    {
                        <span data-feather="tv"></span>
                    }
                    else
                    {
                        @d.LibraryName
                    }
                    </td>
                    <td>@d.Title</td> 
                    <td>@d.SeasonTitle</td>
                    <td>@d.EpisodeTitle</td> 
                    <td>@d.WasWatched</td>  
                    <td>@d.TotalPlays</td>  
                </tr>    
            }  
        </tbody>
    </table>
</div>

